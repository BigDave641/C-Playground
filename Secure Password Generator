#include <stdio.h>
#include <time.h>
#include <stdlib.h>

char
    a[]="abcdefghijklmnopqrstuvwxyz",
    b[]="ABCDEFGHIJKLMNOPQRSTUVWXYZ";
int
    i,c[]={1,2,3,4,5,6,7,8,9,0},d;

void password_generator_without_symbols() //without symbols. Replace 12 with how many characters you want the password to be.
{
    for(i=0;i<12;i++){ 
        switch(rand()%3){
        case 0:
            printf("%c",a[rand()%26]);
            break;
        case 1:
            printf("%c",b[rand()%26]);
            break;
        case 2:
            printf("%d",c[rand()%10]);
            break;
}}}

void password_generator_with_symbols(){ //with symbols. Replace 12 with how many characters you want the password to be.
    for(i=0;i<12;i++){
        d=33+rand()%94;
        printf("%c",d);
    }
}

void main()
{
    srand(time(NULL));
    printf("This is your pretty secure password with symbols.\n");
    password_generator_with_symbols();
    printf("\nThis is your somewhat secure password that has no symbols.\n");
    password_generator_without_symbols();
}
